<header>
  <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/tamizajes">
        <i data-lucide="stethoscope" width="28" height="28" class="me-2"></i>
        Sistema de Tamizajes
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <% if (user) { %>
            <!-- ✅ ADMIN y SUPERVISOR: Ven todo el menú -->
            <% if (user.rol === 1 || user.rol === 3) { %>
              <li class="nav-item">
                <a class="nav-link" href="/tamizajes">
                  <i data-lucide="clipboard-list" width="18" height="18" class="me-1"></i>
                  Tamizajes
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/empleados">
                  <i data-lucide="users" width="18" height="18" class="me-1"></i>
                  Empleados
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/usuarios">
                  <i data-lucide="user-cog" width="18" height="18" class="me-1"></i>
                  Usuarios
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/roles">
                  <i data-lucide="shield" width="18" height="18" class="me-1"></i>
                  Roles
                </a>
              </li>
            <% } %>
            
            <!-- ✅ EMPLEADO: Solo ve "Mis Tamizajes" -->
            <% if (user.rol === 2) { %>
              <li class="nav-item">
                <a class="nav-link" href="/tamizajes">
                  <i data-lucide="clipboard-list" width="18" height="18" class="me-1"></i>
                  Mis Tamizajes
                </a>
              </li>
            <% } %>
          <% } %>
        </ul>
        
        <ul class="navbar-nav">
          <% if (user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i data-lucide="user" width="18" height="18" class="me-1"></i>
                <%= user.email %>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="#" id="logoutBtn">
                    <i data-lucide="log-out" width="16" height="16" class="me-1"></i>
                    Cerrar sesión
                  </a>
                </li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">
                <i data-lucide="log-in" width="18" height="18" class="me-1"></i>
                Iniciar sesión
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  // Inicializar íconos Lucide
  document.addEventListener('DOMContentLoaded', function() {
    lucide.createIcons();
    
    // ✅ SCRIPT SIMPLIFICADO PARA LOGOUT
    const logoutBtn = document.getElementById('logoutBtn');
    
    if (logoutBtn) {
      logoutBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        Swal.fire({
          title: '¿Cerrar sesión?',
          text: "¿Estás seguro de que quieres salir?",
          icon: 'question',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Sí, cerrar sesión',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            // ✅ REDIRECCIÓN DIRECTA - AHORA FUNCIONARÁ
            window.location.href = '/auth/logout';
          }
        });
      });
    }
  });
</script>